@model List<Otel_Yonetim.Models.Duyuru>

@{
    ViewData["Title"] = "Ana Panel";
    var rol = ViewBag.Rol?.ToString().ToLower();
}

<h2 class="text-primary mb-3">Merhaba, @ViewBag.KullaniciAdi 👋</h2>
<p class="text-muted">Rolünüz: <strong>@ViewBag.Rol</strong></p>

<hr />

<!-- Bugünün tarihi -->
<div class="alert alert-light border-start border-3 border-primary">
    Bugünün tarihi: <strong>@DateTime.Now.ToString("dd MMMM yyyy, dddd")</strong>
</div>

<!-- Tüm duyurular -->
@if (Model != null && Model.Any())
{
    <h5 class="text-info mb-3">📢 Güncel Duyurular</h5>

    @foreach (var duyuru in Model)
    {
        <div class="card mb-3 border-info shadow-sm">
            <div class="card-header bg-info text-white d-flex justify-content-between">
                <strong>@duyuru.Baslik</strong>
                <span class="small">@duyuru.Tarih.ToString("dd.MM.yyyy")</span>
            </div>
            <div class="card-body">
                <p>@duyuru.Icerik</p>
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-warning">Herhangi bir duyuru bulunamadı.</div>
}
