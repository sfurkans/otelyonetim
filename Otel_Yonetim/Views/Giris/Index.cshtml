@{
    ViewData["Title"] = "Giriş Yap";
}
<style>
    body {
        background-image: url('/images/arkaplan.jfif');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
    }
</style>

<div class="d-flex justify-content-center mt-5">

    <div class="card p-4 shadow-lg border-0" style="
    width: 400px;
    backdrop-filter: blur(12px);
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
">
        <div class="text-center mb-4">
            <h2 class="fw-bold">🏨 Otel Yönetimi</h2>
            <p class="text-muted">Lütfen giriş yapın</p>
        </div>

        <form method="post" asp-controller="Giris" asp-action="Index">
            <div class="mb-3">
                <label class="form-label">Kullanıcı Adı</label>
                <input type="text" class="form-control" name="kullaniciAdi" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input type="password" class="form-control" name="sifre" required />
            </div>

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger py-2 text-center">
                    @ViewBag.Hata
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>
