@model Otel_Yonetim.Models.Duyuru
<h3>Yeni Duyuru</h3>

<form asp-action="Ekle">
    <div class="mb-3">
        <label>Başlık</label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label>İçerik</label>
        <textarea asp-for="Icerik" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Icerik" class="text-danger"></span>

    </div>
    <button class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
