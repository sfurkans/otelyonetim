@model Otel_Yonetim.Models.Musteri

<h2 class="text-warning mb-4">Müşteri Güncelle</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var hata in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@hata.ErrorMessage</li>
            }
        </ul>
    </div>
}


<form asp-action="Guncelle" method="post" class="border p-4 rounded shadow-sm bg-light">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        <input asp-for="AdSoyad" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Musteri" class="btn btn-secondary">İptal</a>
</form>
